{% extends 'base.html.twig' %}

{% block title %}Hello
{% endblock %}

{% block body %}
	<!-- Sidebar -->
	<div class="flex">
		{% include("partials/menu.html.twig") %}
		<div class="bg-white p-6 rounded-lg shadow-md mt-8 w-[80%] mx-auto">
			<h3 class="text-xl font-semibold text-gray-700 mb-4">Gestion des Niveaux</h3>
			<div class="overflow-x-auto">
				<div class="mb-4  flex"></div>
			</div>
			<table class="min-w-full table-auto border-collapse border border-gray-200">
				<thead class="bg-gray-100">
					<tr>
						<th class="py-2 px-4 border border-gray-200 text-left">ID</th>
						<th class="py-2 px-4 border border-gray-200 text-left">Nom</th>
						<th class="py-2 px-4 border border-gray-200 text-left">Module</th>
						<th class="py-2 px-4 border border-gray-200 text-left">Niveau</th>
						<th class="py-2 px-4 border border-gray-200 text-left">Classes</th>
						<th class="py-2 px-4 border border-gray-200 text-left">Professeur</th>
					</tr>
				</thead>
				<tbody>
					{% for cours in cours %}
						<tr class="hover:bg-gray-50">
							<td class="py-2 px-4 border border-gray-200">{{ cours.id }}</td>
							<td class="py-2 px-4 border border-gray-200">{{ cours.nom }}</td>
							<td class="py-2 px-4 border border-gray-200">{{ cours.module }}</td>
							<td class="py-2 px-4 border border-gray-200">{{ cours.niveau.nom }}</td>
							<td class="py-2 px-4 border border-gray-200">
								{{ cours.classes|map(classe => classe.nom)|join(', ') }}
							</td>
							<td class="py-2 px-4 border border-gray-200">{{ cours.professeur.nom }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<!-- Pagination -->
			{% include 'partials/pagination.html.twig' with {
        currentPage: pagination.getCurrentPage(),
        totalPages: pagination.getTotalPages(),
        hasPreviousPage: pagination.hasPreviousPage(),
        hasNextPage: pagination.hasNextPage(),
        route: route
    } %}
		</div>

	</div>
</div>{% endblock %}
