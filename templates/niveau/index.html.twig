{% extends 'base.html.twig' %}
{% form_theme form 'tailwind_2_layout.html.twig' %}
{% block title %}Hello ClientController!
{% endblock %}

{% block body %}
	<!-- Sidebar -->
	<div class="flex">
		{% include("partials/menu.html.twig") %}
		<div class="bg-white p-6 rounded-lg shadow-md mt-8 w-[80%] mx-auto">
			<h3 class="text-xl font-semibold text-gray-700 mb-4">Gestion des Niveaux</h3>
			<div class="overflow-x-auto">
				<div class="mb-4  flex">
					{{ form_start(form) }}
					{{form_widget(form.nomNiveau) }}
					<button type="submit" class="btn btn-outline">Enregistrer</button>
					{{ form_end(form) }}
				</div>
			</div>
			<table class="min-w-full table-auto border-collapse border border-gray-200">
				<thead class="bg-gray-100">
					<tr>
						<th class="py-2 px-4 border border-gray-200 text-left">id</th>
						<th class="py-2 px-4 border border-gray-200 text-left">nom</th>
					</tr>

				</thead>
				<tbody>
					{% for niveau in niveaux %}
						<tr class="hover:bg-gray-50">
							<td class="py-2 px-4 border border-gray-200">{{niveau.id}}</td>
							<td class="py-2 px-4 border border-gray-200">{{niveau.nomNiveau}}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<!-- Pagination -->
			{% include 'partials/pagination.html.twig' with {
        currentPage: pagination.getCurrentPage(),
        totalPages: pagination.getTotalPages(),
        hasPreviousPage: pagination.hasPreviousPage(),
        hasNextPage: pagination.hasNextPage(),
        route: route
    } %}
		</div>

	</div>
</div>{% endblock %}
